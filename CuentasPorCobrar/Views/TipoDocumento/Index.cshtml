@model IEnumerable<CuentasPorCobrar.Db.TipoDocumento>

@{
    ViewBag.Title = "Index";
}

<h2>Tipos de documentos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdTipoDocumento }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdTipoDocumento }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.IdTipoDocumento })
        </td>
    </tr>
}

</table>
